<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget35"
    style="@style/nowCardStyle"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp"
    
    android:descendantFocusability="beforeDescendants"
android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp" 
            >

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginTop="5dp">

                <TableRow
                    android:id="@+id/TableRow01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="15dp"
                        android:text="Stunde Bearbeiten"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#707070" />

                </TableRow>

                <TableRow
                    android:id="@+id/tableRow4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bezeichnung"
                        android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editTextBezeichnung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="3"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Woche"
                        android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:entries="@array/gerade_array" android:layout_weight="3"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tag"
                        android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinnerTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/tag_array" android:layout_weight="3"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stunde"
                       android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinnerStunde"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/stunden_array" android:layout_weight="3"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Typ"
                       android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <Spinner
                        android:id="@+id/spinnerTyp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/typ_array" android:layout_weight="3"/>
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Raum"
                        android:textColor="#707070"
                        android:textAppearance="?android:attr/textAppearanceMedium" android:layout_weight="1"/>

                    <EditText
                        android:id="@+id/editTextRaum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_weight="3"/>
                </TableRow>
            </TableLayout>





            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal" android:layout_marginTop="10dp">

                <Button
                    android:id="@+id/eloesch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Eintrag Löschen" />

                <Button
                    android:id="@+id/btnstundedit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Ändern/Hinzufügen" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
